    <script>
        let num, opcion= 0
        alert('¿El año es bisiesto?')
        while (opcion != 1){
            num = Number(prompt('Compruebe si el año es bisiesto:'))
            if (num % 4 == 0 && num % 100 != 0 || num % 400 == 0) {
                alert('El Año ingresado es bisiesto.')
            } else {
                alert('El Año ingresado no es bisiesto.')
            }
            opcion = Number(prompt('Si desea continuar con el programa ingrese [0]\nSi desea finalizar el programa ingrese [1]'))
            
        }
        alert('El programa a finalizado')
    </script>
