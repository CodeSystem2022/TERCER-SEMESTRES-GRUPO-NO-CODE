    <script>
        alert('Contador de números negativos y positivos (el programa se detendra cuando ingrese el numero 0 o cuando ingrese los 10 números)')
        for (let numeros, contadorPositivos = 0, contadorNegativos = 0, i = 0; i <= 9; i++) {
            numeros = Number(prompt('Ingrese un número:'))
            if (numeros >= 1) {
                contadorPositivos++;
            }
            if (numeros <= -1) {
                contadorNegativos++;
            }
            if (numeros == 0) {
                alert('El programa a sido interrumpido al ingresar el 0\n' + 'La cantidad de números positivos es de: ' + contadorPositivos + '\nLa cantidad de números negativos es de: ' + contadorNegativos)
                break
            }

            if (i == 9) {
                alert('La cantidad de números positivos es de: ' + contadorPositivos + '\nLa cantidad de números negativos es de: ' + contadorNegativos)

            }
        }

    </script>
